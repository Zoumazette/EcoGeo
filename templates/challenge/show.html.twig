{% extends 'base.html.twig' %}

{% block title %}Challenge{% endblock %}

{% block body %}
    <h1>Challenge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Nom du challenge</th>
                <td>{{ challenge.challengeName }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ challenge.challengePosition ? challenge.challengePosition|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Créer le</th>
                <td>{{ challenge.createdAt ? challenge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créer par</th>
                <td>{{ challenge.createdBy }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ challenge.updatedAt ? challenge.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour par</th>
                <td>{{ challenge.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('challenge_index') }}">Retour à la liste</a>

    <a href="{{ path('challenge_edit', {'id': challenge.id}) }}">Editer</a>

    {{ include('challenge/_delete_form.html.twig') }}
{% endblock %}
